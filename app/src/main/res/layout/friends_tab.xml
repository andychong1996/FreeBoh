<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffff9800">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:editable="false"
                    android:enabled="false"
                    android:hint="Search"
                    android:background="#ffffffff" />

                <EditText
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:background="#ffffffff"
                    android:hint="Add Friend" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Sort by:"
                    android:id="@+id/textView" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:id="@+id/button" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free"
                    android:id="@+id/button2" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Busy"
                    android:id="@+id/button3" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:layout_gravity="center_horizontal"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_weight="0.60">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="119dp"
            android:layout_height="138dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView"
                android:adjustViewBounds="false"
                android:src="@mipmap/sampleavy1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Clarence"
                android:id="@+id/textView2"
                android:autoText="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="113dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView2"
                android:src="@mipmap/sampleavy2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Christopher"
                android:id="@+id/textView3" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="118dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imageView3"
                android:src="@mipmap/sampleavy3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Vincente"
                android:id="@+id/textView4" />
        </LinearLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:columnCount="3"
        android:rowCount="1"
        android:background="#ffff9800" >

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/myTab"
            android:background="#ffff9800"
            android:src="@mipmap/my_tab_ico"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/yourTab"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#ffff5e00"
            android:src="@mipmap/friends_tab_ico" />

        <ImageButton
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:id="@+id/settingsTab"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@mipmap/settings_tab_ico"
            android:background="#ffff9809" />
    </GridLayout>

</LinearLayout>